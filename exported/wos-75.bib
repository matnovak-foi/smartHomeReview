@inproceedings{ WOS:000427271400049,
Author = {Jain, Akshat and Basantwani, Shraddha and Kazi, Owais and Bang, Yogita},
Book-Group-Author = {IEEE},
Title = {Smart Surveillance Monitoring System},
Booktitle = {2017 1ST IEEE INTERNATIONAL CONFERENCE ON DATA MANAGEMENT, ANALYTICS AND
